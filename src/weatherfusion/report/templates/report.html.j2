<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>EHS 10-Day Forecast</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
      background: #f3f4f6;
      color: #111827;
      line-height: 1.4;
    }
    .wrapper {
      max-width: 640px;
      margin: 0 auto;
      padding: 24px 16px 32px;
    }
    .card {
      background: #ffffff;
      border-radius: 12px;
      padding: 20px;
      border: 1px solid #e5e7eb;
      box-shadow: 0 3px 12px rgba(15, 23, 42, 0.08);
    }
    .card + .card {
      margin-top: 16px;
    }
    h1, h2, h3 {
      margin: 0;
      font-weight: 600;
      color: #111827;
    }
    h1 {
      font-size: 1.3rem;
    }
    h2 {
      font-size: 1.1rem;
      margin-bottom: 0.2rem;
    }
    h3 {
      font-size: 0.98rem;
      margin-bottom: 0.25rem;
    }
    .meta {
      font-size: 0.85rem;
      color: #6b7280;
      margin: 0.15rem 0;
    }
    .table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
      margin-top: 0.4rem;
    }
    .table th {
      text-align: left;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #6b7280;
      padding: 0 4px 6px;
      border-bottom: 1px solid #e5e7eb;
    }
    .table td {
      padding: 10px 4px;
      border-bottom: 1px solid #f3f4f6;
      vertical-align: top;
    }
    .table tr:last-child td {
      border-bottom: 0;
    }
    .date-label {
      font-weight: 600;
      color: #111827;
    }
    .small {
      font-size: 0.78rem;
      color: #6b7280;
    }
    .badge {
      display: inline-block;
      padding: 2px 9px;
      border-radius: 999px;
      font-size: 0.72rem;
      border: 1px solid transparent;
      margin-top: 4px;
      font-weight: 600;
    }
    .badge.low {
      border-color: #fca5a5;
      background: #fef2f2;
      color: #b91c1c;
    }
    .badge.info {
      border-color: #bfdbfe;
      background: #eff6ff;
      color: #1d4ed8;
    }
    .badge.heat {
      border-color: #fdba74;
      background: #fff7ed;
      color: #9a3412;
    }
    .badge.freeze {
      border-color: #a5f3fc;
      background: #ecfeff;
      color: #0e7490;
    }
    .badge.tight {
      margin-right: 4px;
    }
    .source-list {
      font-size: 0.76rem;
      color: #6b7280;
      margin-top: 0.2rem;
    }
    .empty {
      font-size: 0.9rem;
      color: #6b7280;
      margin: 0.3rem 0 0;
    }
    .alert-block {
      margin-top: 0.8rem;
      border-left: 3px solid #f97316;
      padding-left: 10px;
    }
    .alert-block ul {
      margin: 0.2rem 0 0 0;
      padding-left: 1.1rem;
      font-size: 0.85rem;
      color: #6b7280;
    }
    .alert-block li {
      margin-bottom: 0.25rem;
    }
    .lightning-note {
      margin-top: 0.6rem;
      font-size: 0.82rem;
      color: #92400e;
    }
  </style>
</head>
<body>
  {% set source_names = {
    'nbm_grib': 'NBM · CONUS',
    'nws_rss': 'NWS MapClick',
    'nws_gridpoint': 'NWS Gridpoint',
    'nws_ndfd': 'NWS NDFD'
  } %}
  {% macro source_label(code) -%}
    {{ source_names.get(code, code.replace('_', ' ').title()) }}
  {%- endmacro %}

  <div class="wrapper">
    <section class="card">
      <h1>EHS 10-Day Forecast</h1>
      <p class="meta">Generated {{ generated_at.astimezone().strftime('%Y-%m-%d %H:%M %Z') }}</p>
      <p class="meta">Sources OK — {{ meta.get('sources_ok_display') }}</p>
      <p class="meta">Fallback — {{ meta.get('sources_failed_display') }}</p>
    </section>

    {% for title, site in [(home_label, home), (work_label, work)] %}
      {% set rows = site.rows %}
      {% set site_alerts = alerts.get(title, []) %}
      <section class="card">
        <h2>{{ title }}</h2>
        <p class="meta">10-day outlook snapshot</p>
        {% if rows %}
          <table class="table" role="table" aria-label="{{ title }} forecast table">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Temps</th>
                <th scope="col">Details</th>
                <th scope="col">Sources</th>
              </tr>
            </thead>
            <tbody>
              {% for row in rows %}
                <tr>
                  <td>
                    <div class="date-label">{{ row.label }}</div>
                    {% if row.low_confidence %}
                      <span class="badge low">Low confidence</span>
                    {% endif %}
                  </td>
                  <td>
                    <div><strong>{{ format_temp(row.high_f) }}</strong> / {{ format_temp(row.low_f) }}</div>
                    <div class="small">PoP {{ format_pop(row.pop_pct) }}</div>
                  </td>
                  <td>
                    {% if row.precip_type %}
                      <span class="badge info">{{ row.precip_type }}</span>
                    {% endif %}
                    <div>{{ row.precip_notes or '—' }}</div>
                    <div class="small">
                      {% if row.precip_consensus %}{{ row.precip_consensus }}{% endif %}
                      {% if row.precip_consensus and (row.qpf_inches or row.snow_inches or row.ice_inches) %} · {% endif %}
                      {% if row.qpf_inches %}Liquid {{ format_amount(row.qpf_inches) }}{% endif %}
                      {% if row.snow_inches %}
                        {% if row.qpf_inches %} / {% endif %}
                        Snow {{ format_amount(row.snow_inches) }}
                      {% endif %}
                      {% if row.ice_inches %}
                        {% if row.qpf_inches or row.snow_inches %} / {% endif %}
                        Ice {{ format_amount(row.ice_inches) }}
                      {% endif %}
                    </div>
                    {% if title == work_label %}
                      {% if row.heat_category %}
                        <span class="badge heat tight">Heat {{ row.heat_category }}</span>
                        <div class="small">Work/rest {{ row.heat_guidance.get('work_rest_min') }} · Hydration {{ row.heat_guidance.get('hydration_cups_per_min') }}</div>
                      {% endif %}
                      {% if row.freeze_risk_badge %}
                        <span class="badge freeze tight">{{ row.freeze_risk_badge }}</span>
                        <div class="small">{{ row.freeze_guidance or 'Freeze precautions recommended' }}</div>
                      {% endif %}
                    {% endif %}
                  </td>
                  <td>
                    <div class="small">{{ row.sources_count }} source{{ '' if row.sources_count == 1 else 's' }}</div>
                    <div class="source-list">
                      {% if row.sources %}
                        {% for src in row.sources %}
                          {{ source_label(src) }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                      {% else %}
                        —
                      {% endif %}
                    </div>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% else %}
          <p class="empty">No data available for this location.</p>
        {% endif %}

        {% if title == work_label and rows and rows[0].lightning_note %}
          <div class="lightning-note">⚡ {{ rows[0].lightning_note }}</div>
        {% endif %}

        {% if site_alerts %}
          <div class="alert-block">
            <h3>Active alerts for {{ title }}</h3>
            <ul>
              {% for alert in site_alerts %}
                <li>
                  {{ alert.headline }} — {{ alert.severity }}
                  {% if alert.expires %}(until {{ alert.expires.strftime('%b %d %H:%M %Z') }}){% endif %}
                  {% if alert.instruction %}
                    <div class="small">{{ alert.instruction }}</div>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </section>
    {% endfor %}
  </div>
</body>
</html>
